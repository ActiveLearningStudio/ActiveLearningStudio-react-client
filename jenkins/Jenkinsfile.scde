node("currikiscde") {
    def app
    
    stage('Clone repository') {               
        checkout scm    
    }  
    
    stage('Build image') {         
        app = docker.build("quay.io/curriki/client")    
        
    } 
    stage('Test image') {           
        app.inside { 
                sh 'echo "Api Tests passed"'        
        }    
    } 
    stage('Push image') {	
        docker.withRegistry('https://quay.io', 'docker-private-credentials') {            
            app.push("${env.BUILD_NUMBER}")            
            app.push("scde")        
        }    
         
    }
    
    parallel(
            "StageA": {
                if(Jenkins.instance.getNode('currikiscde').toComputer().isOnline()){
                    node('currikiscde') {
                        stage ('currikiscde') {
                                echo 'Copy'
                                sh "yes | docker stack deploy --compose-file ~/curriki/docker-compose-scde.yml currikistack" 
                                echo 'Copy completed'
                        }
                    }
                } else {
                    stage ('currikiscde') {
                        echo "currikiscde is offline"
                        exit 1
                    }
                }
                
            }
    )
    
}

