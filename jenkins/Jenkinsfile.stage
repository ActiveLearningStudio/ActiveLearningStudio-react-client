node {
    def app
    
    stage('Clone repository') {               
        checkout scm    
    }  
    
    stage('Build image') {         
        app = docker.build("quay.io/curriki/client")    
        
    } 
    stage('Test image') {           
        app.inside { 
                sh 'echo "Api Tests passed"'        
        }    
    } 
    stage('Push image') {	
        docker.withRegistry('https://quay.io', 'docker-private-credentials') {            
            app.push("${env.BUILD_NUMBER}")            
            app.push("latest")        
        }    
         
    }
    
    
    parallel(
            "StageA": {
                if(Jenkins.instance.getNode('currikistage').toComputer().isOnline()){
                    node('currikistage') {
                        stage ('currikistage') {
                                echo 'Copy'
                                sh "yes | docker stack deploy --compose-file ~/curriki/docker-compose-stage.yml currikistack" 
                                echo 'Copy completed'
                        }
                    }
                } else {
                    stage ('currikistage') {
                        echo "currikistage is offline"
                        exit 1
                    }
                }
                
            },
            "StageB": {
                if(Jenkins.instance.getNode('artificialchat').toComputer().isOnline()){
                    node('artificialchat') {
                        stage ('artificialchat') {
                                echo 'Copy'
                                sh "yes | sudo docker stack deploy --compose-file /home/ubuntu/curriki/docker-compose.yml currikistack" 
                                echo 'Copy completed'
                        }
                    }
                } else {
                    stage ('artificialchat') {
                        echo "currikistage is offline"
                        exit 1
                    }
                }
                
            },
            "StageB": {
                if(Jenkins.instance.getNode('currikimopse').toComputer().isOnline()){
                    node('currikimopse') {
                        stage ('currikimopse') {
                                echo 'Copy'
                                sh "yes | sudo docker stack deploy --compose-file /curriki/docker-compose-connectedls.yml currikistack" 
                                echo 'Copy completed'
                        }
                    }
                } else {
                    stage ('currikimopse') {
                        echo "currikistage is offline"
                        exit 1
                    }
                }
                
            }
    )
    
}

